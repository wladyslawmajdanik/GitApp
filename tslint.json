{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "no-any": false, //TODO true
    "forin": false,
    "no-empty-interface": true,
    "no-magic-numbers": [true],
    "promise-function-async": false,
    "typedef": false,
    "no-duplicate-super": true,
    "no-construct": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-submodule-imports": false,
    "no-floating-promises": [true, "Promise"],
    "no-implicit-dependencies": false,
    "no-invalid-template-strings": true,
    "no-invalid-this": [true],
    "await-promise": false, // TODO true
    "curly": [true, "ignore-same-line"],
    "no-misused-new": true,
    "no-return-await": true,
    "no-shadowed-variable": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "no-var-requires": true,
    "prefer-object-spread": true,
    "radix": false,
    "restrict-plus-operands": false,
    "switch-default": true,
    "triple-equals": [true, "allow-null-check", "allow-undefined-check"],
    "indent": [true, "spaces", 2],
    "linebreak-style": [true, "LF"],
    "max-line-length": [true, 120],
    "no-duplicate-imports": true,
    "no-require-imports": true,
    "no-angle-bracket-type-assertion": false,
    "prefer-const": true,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "array-type": [true, "array"],
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "class-name": true,
    "import-spacing": true,
    "interface-name": false,
    "newline-per-chained-call": false,
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": [true, "ignore-comments", "ignore-jsdoc", "ignore-blank-lines"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-switch": [true, 2],
    "quotemark": [true, "single", "jsx-double", "avoid-escape"],
    "semicolon": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always",
        "method": "never",
        "constructor": "never"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-module",
      "check-preblock"
    ],
    "one-line": [true, "check-catch", "check-else", "check-finally"],
    "member-access": false,
    "member-ordering": false,
    "no-inferrable-types": false,
    "no-internal-module": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "ban": false,
    "only-arrow-functions": false,
    "interface-over-type-literal": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "prefer-conditional-expression": false,
    "no-console": true,
    "no-debugger": true,
    "no-eval": true,
    "no-null-keyword": false,
    "no-relative-imports": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unused-expression": true,
    "object-literal-sort-keys": false,
    "align": true,
    "comment-format": [true, "check-space"],
    "jsdoc-format": true,
    "no-parameter-properties": false,
    "no-parameter-reassignment": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "ordered-imports": false,
    "jsx-alignment": true,
    "jsx-curly-spacing": false,
    "jsx-equals-spacing": [true, "never"],
    "jsx-key": true,
    "jsx-no-bind": true,
    "jsx-no-lambda": false, //TODO true
    "jsx-no-multiline-js": false,
    "jsx-no-string-ref": true,
    "jsx-self-close": true,
    "jsx-space-before-trailing-slash": false,
    "jsx-wrap-multiline": false,
    "jsx-boolean-value": false
  },
  "linterOptions": {
    "exclude": ["node_modules/**/*.ts", "dist/**/*.ts"]
  },
  "rulesDirectory": ["node_modules/tslint-microsoft-contrib"]
}
